{
  "compilerOptions": {
     "outDir": "./built",
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "es5",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015"
    ],
    "allowSyntheticDefaultImports": true,
    
  },
    "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/__tests__/**/*",
  ]

}
